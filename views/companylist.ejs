<div id="tableDiv" class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <table class="table">
            <thead class="white-text">
            <th scope="col">Company</th>
            <th scope="col">Status</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            </thead>
            <tbody>
            <% for (var i=0; i< items.length;i++){ %>
            <tr>
                <th class="col-3" scope="row"><%= items[i].companyName %></th>
                <th><%= items[i].isActive==1 ? 'Enabled':'Disabled'%></th>
                <td class="col-2"><a data-tid="<%= items[i]._id %>" href="/deleteCompany/<%= items[i]._id %>" class="btn btn-sm btn-danger">Delete</a></td>
                <td class="col-1"><a title="Send Email" data-toggle="modal" data-target="#emailConfig"><i class="fa fa-bell fa-2x cyan-text pr-3" aria-hidden="true"></i></a></td>
                <td class="col-1"><a data-colid="<%= items[i].emailColumns %>" title="Settings" data-toggle="modal" data-target="#reportConfig"><i class="fa fa-cog fa-2x purple-text pr-3" aria-hidden="true"></i></a></td>
            </tr>
            <%}%>
            </tbody>
        </table>
    </div>
    <div class="col-md-1"></div>
