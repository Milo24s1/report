<script>
    $(document).ready(function () {


    var defaultRes1,defaultRes2,defaultRes3;
    var res1Col,res2Col,res3Col,prosCol,deliCol,openCol,resCol,statusCol;
    var currentToken = null;
    var currentCampId = null;
    var next =0;

        lazyLoad(next);
        function lazyLoad(next) {
            $("#loader").removeClass('invisible');
            $.ajax({
                url : '/search',
                data: {
                    next : next
                },
                method: 'post',
                datatype: 'json',
                success: function (data) {
                    let tableDom = '';
                    if(data.rowData.length > 0){
                        for(i=0;i<data.rowData.length;i++){


                            tableDom += `<tr>
                                        <th class="camp-col" data-token=${data.rowData[i].companyId} scope="row">${data.rowData[i].companyName}</th>
                                        <td class="camp-col" data-campid=${data.rowData[i]._id}>${data.rowData[i].campaignName}</td>
                                        <td class="status-col">${data.rowData[i].status}</td>
                                        <td class="number-col reg1" data-prospect=${data.rowData[i].prospects}>${data.rowData[i].prospects}</td>
                                        <td class="number-col reg2" data-delivered=${data.rowData[i].delivered}>${data.rowData[i].delivered} (${data.rowData[i].deliveredPercentage}%)</td>
                                        <td class="number-col reg3" data-opened=${data.rowData[i].opened} >${data.rowData[i].opened} (${data.rowData[i].openedPercentage}%)</td>
                                        <td class="number-col reg4" data-response=${data.rowData[i].response} >${data.rowData[i].response} (${data.rowData[i].responsesPercentage}%)</td>
                                        <td class="number-col cus1">${data.rowData[i].customCol1}</td>
                                        <td class="number-col cus2">${data.rowData[i].customCol2}</td>
                                        <td class="number-col cus3">${data.rowData[i].customCol3}</td>
                                        <td class="edit-col"><a data-toggle="modal" data-target="#editor"><i class="fa fa-pencil fa-2x purple-text pr-3" aria-hidden="true"></i></a></td>
                                        </tr>`
                        }
                        $("table").append(tableDom)
                    }
                    $("#loader").addClass('invisible');
                    if(data.rowData.length != 0){
                        next++;
                        lazyLoad(next);
                    }


                },
                error : function (xhr, ajaxOptions, thrownError) {
                    // lazyLoad(next);
                    if(xhr.status!=200) {
                        $("#loader").addClass('invisible');
                    }
                }
            });
        }
    });

    $('body').on('click', '.fa-pencil', function(){

        statusCol = $(this).closest('tr').find("td:nth-child(3)")
        var statusText = statusCol.text();
        $("#status").val(statusText);

        $('label').addClass('active');
        res1Col = $(this).closest('tr').find('.cus1');
        defaultRes1= res1Col.text();
        res2Col = $(this).closest('tr').find('.cus2');
        defaultRes2= res2Col.text();
        res3Col = $(this).closest('tr').find('.cus3');
        defaultRes3= res3Col.text();

        prosCol = $(this).closest('tr').find('.reg1');
        defaultRes4= prosCol.text();
        deliCol = $(this).closest('tr').find('.reg2');
        defaultRes5= deliCol.data('delivered');
        openCol = $(this).closest('tr').find('.reg3');
        defaultRes6= openCol.data('opened');
        resCol = $(this).closest('tr').find('.reg4');
        defaultRes7= resCol.data('response');
        console.log(defaultRes3,defaultRes5,defaultRes6,defaultRes7);
        $('#inputIconEx1').val(defaultRes1);
        $('#inputIconEx2').val(defaultRes2);
        $('#inputIconEx3').val(defaultRes3);

        $('#inputIconEx4').val(defaultRes4);
        $('#inputIconEx5').val(defaultRes5);
        $('#inputIconEx6').val(defaultRes6);
        $('#inputIconEx7').val(defaultRes7);

        currentToken = $(this).closest('tr').find('th').data('token');
        currentCampId = $(this).closest("tr").find("td").first().data('campid');
    });
    $('#saveResponse').click(function () {
        $("#editor").modal('hide');

        var tempVal1 = $('#inputIconEx1').val();
        var tempVal2 = $('#inputIconEx2').val();
        var tempVal3 = $('#inputIconEx3').val();
        var tempVal4 = $('#inputIconEx4').val();
        var tempVal5 = $('#inputIconEx5').val();
        var tempVal6 = $('#inputIconEx6').val();
        var tempVal7 = $('#inputIconEx7').val();

        var updatedStatusValue = $("#status option:selected").val();

        $.ajax({
            'url':'/saveCampaignRecord',
            'method': 'post',
            'dataType': 'json',
            'data': {
                campId:currentCampId,
                status: updatedStatusValue,
                token: currentToken,
                customCol1: tempVal1,
                customCol2: tempVal2,
                customCol3: tempVal3,
                prospects: tempVal4,
                delivered: tempVal5,
                opened: tempVal6,
                response: tempVal7,
            },
            'success': function (data) {

                var updatedRecord = data.result;
                alert('Campaign Record Updated Successfully');
                res1Col.text(tempVal1);
                res2Col.text(tempVal2);
                res3Col.text(tempVal3);
                prosCol.text(tempVal4);
                deliCol.text(updatedRecord.delivered+'('+updatedRecord.deliveredPercentage+'%)');
                openCol.text(updatedRecord.opened+'('+updatedRecord.openedPercentage+'%)');
                resCol.text(updatedRecord.response+'('+updatedRecord.responsesPercentage+'%)');
                statusCol.text(updatedStatusValue);

            },
            'error': function (xhr, ajaxOptions, thrownError) {
                alert(xhr.data.message);

            }
        });

        currentToken = null;
        currentCampId = null;

    });



</script>
