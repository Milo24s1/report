<script>
    $(document).ready(function () {


    var defaultRes1,defaultRes2,defaultRes3,defaultRes8;
    var res1Col,res2Col,res3Col,prosCol,deliCol,openCol,resCol,statusCol,campCol;
    var currentToken = null;
    var currentCampId = null;
    var next =0;

        lazyLoad(next);
        function lazyLoad(next) {
            $("#loader").removeClass('invisible');
            $.ajax({
                url : '/search',
                data: {
                    next : next
                },
                method: 'post',
                datatype: 'json',
                success: function (data) {
                    let tableDom = '';
                    if(data.rowData.length > 0){
                        for(i=0;i<data.rowData.length;i++){


                            tableDom += `<tr>
                                        <th class="camp-col" data-token=${data.rowData[i].companyId} scope="row">${data.rowData[i].companyName}</th>
                                        <td class="camp-col" data-campid=${data.rowData[i]._id}>${data.rowData[i].campaignName}</td>
                                        <td class="status-col">${data.rowData[i].status}</td>
                                        <td class="number-col reg1 hidden" data-prospect=${data.rowData[i].prospects}>${data.rowData[i].prospects}</td>
                                        <td class="number-col reg2 hidden" data-delivered=${data.rowData[i].delivered}>${data.rowData[i].delivered} (${data.rowData[i].deliveredPercentage}%)</td>
                                        <td class="number-col reg3 hidden" data-opened=${data.rowData[i].opened} >${data.rowData[i].opened} (${data.rowData[i].openedPercentage}%)</td>
                                        <td class="number-col reg4 hidden" data-response=${data.rowData[i].response} >${data.rowData[i].response} (${data.rowData[i].responsesPercentage}%)</td>
                                        <td class="number-col cus1 reach">${data.rowData[i].customCol1}</td>
                                        <td class="number-col cus2 reach">${data.rowData[i].customCol2}</td>
                                        <td class="number-col cus4 reach">${data.rowData[i].customCol4}</td>
                                        <td class="number-col cus3 reach">${data.rowData[i].customCol3}</td>
                                        <td class="edit-col"><a data-toggle="modal" data-target="#editor"><i class="fa fa-pencil fa-2x purple-text pr-3" aria-hidden="true"></i></a></td>
                                        </tr>`
                        }
                        $("table").append(tableDom)
                    }
                    $("#loader").addClass('invisible');
                    if(data.rowData.length != 0){
                        next++;
                        lazyLoad(next);
                    }


                },
                error : function (xhr, ajaxOptions, thrownError) {
                    // lazyLoad(next);
                    if(xhr.status!=200) {
                        $("#loader").addClass('invisible');
                    }
                }
            });
        }
    });

    $('body').on('click', '.fa-pencil', function(){

        campCol = $(this).closest('tr').find("td:nth-child(2)")
        var campaignText = campCol.text();
        $("#campaignName").val(campaignText);

        statusCol = $(this).closest('tr').find("td:nth-child(3)")
        var statusText = statusCol.text();
        $("#status").val(statusText);

        $('label').addClass('active');
        res1Col = $(this).closest('tr').find('.cus1');
        defaultRes1= res1Col.text();
        res2Col = $(this).closest('tr').find('.cus2');
        defaultRes2= res2Col.text();
        res3Col = $(this).closest('tr').find('.cus3');
        defaultRes3= res3Col.text();
        res4Col = $(this).closest('tr').find('.cus4');
        defaultRes8= res4Col.text();

        prosCol = $(this).closest('tr').find('.reg1');
        defaultRes4= prosCol.text();
        deliCol = $(this).closest('tr').find('.reg2');
        defaultRes5= deliCol.data('delivered');
        openCol = $(this).closest('tr').find('.reg3');
        defaultRes6= openCol.data('opened');
        resCol = $(this).closest('tr').find('.reg4');
        defaultRes7= resCol.data('response');

        $('#inputIconEx1').val(defaultRes1);
        $('#inputIconEx2').val(defaultRes2);
        $('#inputIconEx3').val(defaultRes3);
        $('#inputIconEx8').val(defaultRes8);

        $('#inputIconEx4').val(defaultRes4);
        $('#inputIconEx5').val(defaultRes5);
        $('#inputIconEx6').val(defaultRes6);
        $('#inputIconEx7').val(defaultRes7);

        currentToken = $(this).closest('tr').find('th').data('token');
        currentCampId = $(this).closest("tr").find("td").first().data('campid');
    });
    $('#saveResponse').click(function () {
        $("#editor").modal('hide');

        var tempVal1 = $('#inputIconEx1').val();
        var tempVal2 = $('#inputIconEx2').val();
        var tempVal3 = $('#inputIconEx3').val();
        var tempVal4 = $('#inputIconEx4').val();
        var tempVal5 = $('#inputIconEx5').val();
        var tempVal6 = $('#inputIconEx6').val();
        var tempVal7 = $('#inputIconEx7').val();
        var tempVal8 = $('#inputIconEx8').val();

        var updatedStatusValue = $("#status option:selected").val();
        var updatedCampValue = $("#campaignName").val();

        $.ajax({
            'url':'/saveCampaignRecord',
            'method': 'post',
            'dataType': 'json',
            'data': {
                campId:currentCampId,
                campaignName:updatedCampValue,
                status: updatedStatusValue,
                token: currentToken,
                customCol1: tempVal1,
                customCol2: tempVal2,
                customCol3: tempVal3,
                customCol4: tempVal8,
                prospects: tempVal4,
                delivered: tempVal5,
                opened: tempVal6,
                response: tempVal7,
            },
            'success': function (data) {

                var updatedRecord = data.result;
                alert('Campaign Record Updated Successfully');
                res1Col.text(tempVal1);
                res2Col.text(tempVal2);
                res3Col.text(tempVal3);
                res4Col.text(tempVal8);
                prosCol.text(tempVal4);
                deliCol.text(updatedRecord.delivered+'('+updatedRecord.deliveredPercentage+'%)');
                deliCol.data('delivered',updatedRecord.delivered);
                openCol.text(updatedRecord.opened+'('+updatedRecord.openedPercentage+'%)');
                openCol.data('opened',updatedRecord.opened);
                resCol.text(updatedRecord.response+'('+updatedRecord.responsesPercentage+'%)');
                resCol.data('response',updatedRecord.response);
                statusCol.text(updatedStatusValue);
                campCol.text(updatedCampValue);

            },
            'error': function (xhr, ajaxOptions, thrownError) {
                alert(xhr.data.message);

            }
        });

        currentToken = null;
        currentCampId = null;

    });

    $('body').on('click','.reach',function () {

        var campId = $(this).parent().find('td:nth-child(2)').data('campid');
        lazyReachLoad(0,campId);
    });

    function lazyReachLoad(next,campId) {
        $.ajax({
            url:'/getCampaignReach',
            method:'POST',
            dataType: 'json',
            data:{
                searchParams : {campaignId:campId},
                sortParams: {addedDate:-1},
                pageNumber:next
            },
            success: function (data) {

                var reachListDom = ``;

                for(i=0;i<data.list.length;i++){
                    var item = data.list[i];
                    reachListDom += `
                        <li class="list-group-item">
                            <div class="card" style="padding: 15px;">
                                <div class="nameIcon">${item.name.slice(0,1).toUpperCase()}</div>
                                <div class="textContent">
                                    <div class="font-weight-bold" style="color: black">${item.name}</div>
                                    <div class=" font-weight-bold" style="font-size: 13px;color: #e94813;">${item.pCompany}</div>
                                    <div class=" font-weight-bold" style="font-size: 13px;color: gray;">${item.title}</div>
                                    <div class=" font-weight-bold" style="font-size: 13px;color: #aa490d;">${item.phone}</div>
                                    <div class=" font-weight-bold" style="font-size: 13px;color: blue;">${item.email}</div>
                                </div>
                            </div>
                        </li>
                    `;
                }


                if(next==0){
                    $(".list-group-item").remove();
                }
                $(".reach-list").append(reachListDom);
                if(next==0){
                    $("#reachModal").modal('show');
                }
                if(data.list.length==20){
                    next++;
                    lazyReachLoad(next,campId);
                }


            },
            error: function (xhr, ajaxOptions, thrownError) {

            }
        });
    }



</script>
